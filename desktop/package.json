{
  "name": "todolist",
  "version": "1.0.0",
  "description": "desktop todo list",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . todolist --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=NA --version-string.FileDescription=CE --version-string.ProductName=\"Todo List\"",
    "package-linux": "electron-packager . todolist --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "author": "ha",
  "license": "MIT",
  "dependencies": {
    "electron": "^8.2.0"
  },
  "devDependencies": {
    "electron-packager": "^14.2.1"
  }
}
